<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ashfaaq.android.fitnessappv2.RunningActivity"
    android:background="#ff5739">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_runer_silhouette_running_fast"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/aclonica"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="100dp"/>

        <TextView
            android:id="@+id/km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:text="KILOMETERS"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/km"
            android:background="@drawable/ic_timer_black_24dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_below="@+id/clock"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv0"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffe62b"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:paddingTop="25dp">

        <Button
            android:id="@+id/stop"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_stop_black_24dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="25dp"
            android:onClick="stopB"/>

        <Button
            android:id="@+id/play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_play_circle_filled_black_24dp"
            android:layout_toRightOf="@+id/stop"
            android:onClick="playB"/>


    </RelativeLayout>

</RelativeLayout>
