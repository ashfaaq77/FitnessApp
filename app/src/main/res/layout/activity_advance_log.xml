<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ashfaaq.android.fitnessappv2.AdvanceLogActivity">

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff7f54"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="DATE"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="DISTANCE"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:text="TIME"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvS"
        android:layout_below="@+id/ly1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/achievement"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/search"
            android:background="@drawable/ic_star_black_24dp"
            android:layout_alignParentBottom="true"
            android:onClick="achievementB"/>

        <Button
            android:id="@+id/datepicker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_date_range_black_24dp"
            android:paddingBottom="60dp"
            android:onClick="calendarB"/>

        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/datepicker"
            android:paddingBottom="60dp"
            android:text="search"
            android:background="@drawable/ic_search_black_24dp"
            android:onClick="searchB"/>

    </RelativeLayout>


</RelativeLayout>
